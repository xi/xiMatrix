{
  "manifest_version": 2,
  "name": "xiMatrix",
  "author": "Tobias Bengfort",
  "homepage_url": "https://github.com/xi/xiMatrix",
  "description": "block requests based on domain and type",
  "version": "0.6.0",
  "browser_action": {
    "default_title": "xiMatrix",
    "default_popup": "src/popup.html",
    "default_icon": "icon.svg"
  },
  "icons": {
    "48": "icon.svg"
  },
  "background": {
    "scripts": ["src/shared.js", "src/bg.js"],
    "persistent": false
  },
  "content_scripts": [{
    "js": ["src/content.js"],
    "matches": ["<all_urls>"],
    "run_at": "document_start"
  }],
  "options_ui": {
    "page": "src/settings.html",
    "open_in_tab": true
  },
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{936cea12-8e61-4929-b589-caece971bbd7}"
    }
  }
}
