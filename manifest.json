{
  "manifest_version": 2,
  "name": "xiMatrix",
  "author": "Tobias Bengfort",
  "homepage_url": "https://github.com/xi/xiMatrix",
  "description": "block requests based on domain and type",
  "version": "0.0.0",
  "browser_action": {
    "default_title": "xiMatrix",
    "default_popup": "src/popup.html",
    "default_icon": {
      "128": "icon-128.png"
    }
  },
  "icons": {
    "128": "icon-128.png"
  },
  "background": {
    "scripts": ["src/shared.js", "src/bg.js"]
  },
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ]
}
